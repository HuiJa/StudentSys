<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">
  <!--1.修改servlet版本为3.0.具体看tomcat里面的web-inf里面的例子-->
  <!-- 2.配置字符编码过滤器 [[ (后台输入文字变乱码问题解决)-->
  <!-- 字符编码过滤器需要放在所有过滤器的最前边 -->
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <!-- 配置需要转换的字符编码 -->
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!--3.配置DispatcherServlet-->
  <servlet>
    <servlet-name>studentSys-dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <!--配合需要加载的配置文件spring-*.xml-->
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:spring-config/spring-*.xml</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>studentSys-dispatcher</servlet-name>
    <!--默认匹配所有请求-->
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <!--4.设置异常跳转-->
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <!--<error-page>
    <error-code>400</error-code>
    <location>/400.jsp</location>
  </error-page>-->
  <!--<error-page>
    <error-code>500</error-code>
    <location>/500.jsp</location>
  </error-page>-->

  <!--5.设置会话超时,永不超时-->
  <session-config>
    <session-timeout>0</session-timeout>
  </session-config>
</web-app>
